	<h4 class="text-danger"><%= "公告数: " + @articles.length.to_s %></h4>
	<table class="table table-striped table-hover">
	<% num = 1 %>
	<% @articles.each do |article| %>

	<tr class="active">
		<td><h4 class="text-danger"><i class="fa fa-star"><%= " 精品 " + num.to_s %></h4></td>>
		<td><h4><strong><%= link_to article.title, article_path(article) %></strong></h4></td>
		<td><h5 class="text-danger"><%= article.author %></h5></td>
		<td><h5><%= article.created_at.to_s[0,19] %></h5></td>
	</tr>

	<% num += 1 %>
	<% end %>
	</table>

	<%= paginate @articles %>