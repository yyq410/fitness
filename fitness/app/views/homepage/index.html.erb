	<h4 class="text-danger"><%= "帖子数: " + @articles.length.to_s %></h4>
	<table class="table table-striped table-hover">
	<% num = 1 %>

	<% @articles.each do |article| %>

	<tr class="active">
		<% tag = article.tag %>
		<% if tag == "post" %>
		<% type = " 帖子 " %>
		<% type_color = "info" %>
		<% type_icon = "fa-comment-o" %>
		<% elsif tag == "notice" %>
		<% type = " 公告 " %>
		<% type_color = "success" %>
		<% type_icon = "fa-bookmark" %>
		<% elsif tag == "great" %>
		<% type = " 精华 " %>
		<% type_color = "danger" %>
		<% type_icon = "fa-star" %>
		<% end %>
		<td><h5 class="text-<%= type_color %>"><i class="fa <%= type_icon %>"><%= type + num.to_s %></h5></td>>
		<td><h4><strong><%= link_to article.title, article_path(article) %></strong></h4></td>
		<td><h5 class="text-danger"><%= article.author %></h5></td>
		<td><h5><%= article.created_at.to_s[0,19] %></h5></td>
	</tr>

	<% num += 1 %>
	<% end %>
	</table>

	<%= paginate @articles %>