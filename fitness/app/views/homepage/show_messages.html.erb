<table class="table table-striped table-hover">
	<tr class="active">
		<th><h5 class="text-danger">发信人</h5></th>
		<th><h5 class="text-info">消息内容</h5></th>
		<th><h5>时间</h5></th>
	</tr>

	<% @user.messages.each do |message| %>
		<tr class="active">
			<td>管理员</td>
			<td><%= message.content %></td>
			<td><%= message.created_at.to_s[0,19] %></td>
		</tr>
	<% end %>
	
</table>