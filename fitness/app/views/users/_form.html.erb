	<div class="form-group">
        <%= f.label :name, "用户名" %>
        <%= f.text_field :name, :class => "form-control", :placeholder => "User Name" %>
    </div>
    <div class="form-group">
    	<%= f.label :password, "密码" %>
    	<%= f.password_field :password, :class => "form-control" ,:placeholder => "Enter Password" %>
    </div>
    <div class="form-group">
        <label for="Password2">再次输入密码</label>
        <input type="password" class="form-control" id="Password2" placeholder="Enter Password Again">
    </div>
    <div class="form-group">
    	<%= f.label :email, "邮箱" %>
    	<%= f.email_field :email, :class => "form-control", :placeholder => "Email" %>
    </div>
    <div class="form-group">
    	<label class="radio-inline">
    		<%= f.radio_button :gender, "male"%> 男
    	</label>	
        <label class="radio-inline">
        	<%= f.radio_button :gender, "female"%> 女
        </label>
    </div>
    <div class="form-group">
        <%= f.label :age, "年龄" %>
        <%= f.text_field :age, :class => "form-control", :placeholder => "Age" %>
    </div>
    <div class="form-group">
        <label>个人头像</label>
        <%= image_tag(@user.avatar_url(:big)) %>
        <br />
        <%= f.label :avatar, "上传头像" %>
        <div class="field">
            <%= f.file_field :avatar %>
            <%= f.hidden_field :avatar_cache %>
        </div>
    </div>
 